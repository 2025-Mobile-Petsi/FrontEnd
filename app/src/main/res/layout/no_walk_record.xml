<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_walk_empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 산책 기록이 없어요..."
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/iv_walk_empty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_record_image"
            android:layout_marginBottom="12dp"
            android:contentDescription="산책 없음 이미지" />

        <Button
            android:id="@+id/btn_go_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 바로 산책하러 가기"
            android:textColor="#00C853"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/green_button_for_norecord"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="3dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
