<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 유기동물, 실종동물 + 더보기 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="시흥시의 실종/유기 동물"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moreLostAnimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기 >"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 입양 리스트 카드뷰 (수평 스크롤 적용) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 카드 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지1"
                    android:src="@drawable/image_dog1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 카드 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지2"
                    android:src="@drawable/image_dog2"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 카드 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지3"
                    android:src="@drawable/image_dog3"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 추가 카드 예시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지4"
                    android:src="@drawable/image_dog1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 추가 카드 예시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지4"
                    android:src="@drawable/image_dog1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 추가 카드 예시 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:contentDescription="강아지4"
                    android:src="@drawable/image_dog1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
