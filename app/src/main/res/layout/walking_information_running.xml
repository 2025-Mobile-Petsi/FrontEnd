<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 🟢 산책 정보 카드 3개 (가운데 정렬) -->
    <LinearLayout
        android:id="@+id/infoCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- 시작 시간 -->
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_green_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/startTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산책 시작 시간"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </FrameLayout>

        <!-- 진행 시간 -->
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_green_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/durationTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산책 진행 시간"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/durationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0분"
                    android:textSize="15sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </FrameLayout>

        <!-- 거리 -->
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/circle_green_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/distanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산책 거리"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textSize="15sp"
                    android:textColor="#333333"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- ✅ 산책 종료 버튼 (오른쪽 정렬, wrap_content) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/btnEndWalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산책 종료하기"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/rounded_green_button"
            android:backgroundTint="@null"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp" />


    </LinearLayout>

</LinearLayout>
